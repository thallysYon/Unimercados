<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Unimercados_beta" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cor_azul_bebe</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cor_azul_bebe</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowMinWidthMinor">80%</item>

    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/BottomSheetStyleWrapper</item>

    </style>

    <style name="BottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">

        <item name="android:background" >@android:color/transparent</item>

    </style>
    
    <style name="EditTextTheme">
        <item name="colorPrimary">@color/cor_azul_bebe</item>
        <item name="android:layout_marginStart">-16dp</item>
    </style>
</resources>